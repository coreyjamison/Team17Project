<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/coffee"
    android:visibility="visible" >
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/displayQuestionView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/coffee"
	    android:visibility="gone" >
	    
	    <Button
	        android:id="@+id/createAnswer"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_alignParentBottom="true"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/compl_blue_split1"
	        android:text="@string/createAnswer"
	        android:textColor="@color/white" />
	
	    <ListView
	        android:id="@+id/qaItemView"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:layout_above="@id/createAnswer"
	        android:background="@color/milk"
	        android:layout_margin="1sp"
	        android:divider="@color/compl_blue_split2"
	        android:dividerHeight="3sp" >
	    </ListView>
		
	</RelativeLayout>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/createQuestionView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@color/coffee"
	    android:visibility="visible" >
	    
	    <EditText 
	        android:id="@+id/createQuestionTitleView"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/milk"
	        android:text="Title"
	        />
	    
	    <EditText
	        android:id="@+id/createQuestionBodyView"
	        android:layout_below="@id/createQuestionTitleView"
	        android:layout_above="@id/createQuestionBodyView"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent"
	        android:gravity="left|top"
	        android:background="@color/milk2"
	        android:text="Body"
	        />
	    
	    <Button
	        android:id="@+id/createQuestionSubmitButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:background="@color/compl_blue_split1"
	        android:gravity="center"
	        android:text="Submit"
	        android:textColor="@color/white" />
	
	</RelativeLayout>
</RelativeLayout>