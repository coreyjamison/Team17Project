<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<!--
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="title" >
	</TextView>
	-->
    <Button
        android:id="@+id/createCommentButton"
        style="@style/MoQAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/upvoteButton"
        android:layout_toRightOf="@+id/upvoteButton"
        android:onClick="createComment"
        android:text="@string/createComment" />

    <Button
        android:id="@+id/favoriteButton"
        style="@style/MoQAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/createCommentButton"
        android:layout_toRightOf="@+id/createCommentButton"
        android:text="@string/favorite" />

    <Button
        android:id="@+id/viewAttachmentButton"
        style="@style/MoQAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/favoriteButton"
        android:layout_alignBottom="@+id/favoriteButton"
        android:layout_toRightOf="@+id/favoriteButton"
        android:text="Attch" />

    <TextView
        android:id="@+id/bodyText"
        style="@style/MoQATextView" 
        android:layout_marginTop="@dimen/moqa_large_space"       
        android:layout_height="wrap_content"        
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleText"
        android:ems="10"
        android:text="body" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bodyText"        
        android:ems="10"
        android:text="author" />

    <LinearLayout
        android:id="@+id/commentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/createCommentButton"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/upvoteButton"
        style="@style/MoQAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/authorText"
        android:text="@string/upvote" />

</RelativeLayout>